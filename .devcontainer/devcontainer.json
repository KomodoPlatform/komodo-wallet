{
    "name": "flutter_docker",
    "context": "..",
    "dockerFile": "Dockerfile",
    "remoteUser": "komodo",
    "mounts": [
        "source=${localWorkspaceFolder},target=/home/komodo/workspace,type=bind,consistency=delegated"
    ],
    "workspaceFolder": "/home/komodo/workspace",
    "postCreateCommand": "sudo chown -R komodo:komodo /home/komodo/workspace && sudo chmod -R u+w /home/komodo/workspace",
    "postAttachCommand": "flutter pub get",
    "runArgs": [
        "--privileged",
        "-v",
        "/dev/bus/usb:/dev/bus/usb"
    ],
    "forwardPorts": [
        8081,
        5037
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.dart-code",
                "Dart-Code.flutter"
            ],
            "settings": {
                "dart.showTodos": true,
                "dart.debugExternalPackageLibraries": true,
                "dart.promptToGetPackages": false,
                "dart.debugSdkLibraries": false
            }
        }
    }
}